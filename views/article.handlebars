<div class="row">
    <h3 class="card">{{ article.title }}</h3>
    <h5 class="card-panel articleBody">{{ body }}</h5>
</div>

<div class="row">
    <div class="col-md-3">
        <form action="/note/{{article._id}}" method="POST" class="card-panel">
        <h5>Make notes on this article.</h5>
        <div class="row">
            <div class="input-field">
                <i class="">perm identity</i>
                <input type="text" placeholder="Name" name="name" class="validate active">
            </div>
            <div class="input-field">
                <i class="">note</i>
                <input type="text" placeholder="Note" name="Note" class="validate active">
            </div>
        </div>
        <div class="row">
            <div>
                <div class="input-field">
                <input type="btn add-comment-button-topnav" type="submit" value="submit">
            </div>
            </div>

        </div>

        </form>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-3">
                <h5>Comments:</h5>
        {{#if article.comment}}
        {{#each article.comment}}
        <div class="card">
            <p id="nameComment">{{name}}</p>
            <p>{{body}}<p>
        </div>
        {{/each}}
        {{else}}
        <p>No Comments Yet.</p>
        {{/if}}
        </div>
    </div>
</div>